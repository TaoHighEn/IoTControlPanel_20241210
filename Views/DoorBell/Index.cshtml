<h2>門鈴警報觸發紀錄</h2>
<form method="get" asp-action="BellSetting" asp-controller="DoorBell">
	<button type="submit">維護門鈴設備</button>
</form>
@* 這裡可以改成partial view，利用JS使其每10秒更新 *@
@if (ViewBag.LogData.Count != 0)
{
	<table class="table-bordered">
		<th>設備IP</th>
		<th>觸發時間</th>
		@foreach (var data in ViewBag.LogData as IEnumerable<AlertBell>)
		{ 
			<tr>
				<td>@data.SensorIP</td>
				<td>@data.LogTime</td>
			</tr>
		}
	</table>
}
else
{
	<div>查無資料</div>
}